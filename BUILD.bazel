load("@gazelle//:def.bzl", "gazelle")
load("@rules_cc//cc:defs.bzl", "cc_library")

# gazelle:prefix github.com/sdl2_bazel
gazelle(name = "gazelle")

# Expose SDL2 as a cc_library for easy consumption
cc_library(
    name = "sdl2",
    visibility = ["//visibility:public"],
    deps = ["@sdl2"],
)

# Alias for convenience
alias(
    name = "SDL2",
    actual = ":sdl2",
    visibility = ["//visibility:public"],
)
