# Public Domain (extracted from SQLite shell.c)

cc_library(
    name = "sqlar",
    srcs = ["sqlar.c"],
    hdrs = ["sqlar.h"],
    copts = [
        "-Wno-conversion",
        "-Wno-sign-conversion",
        "-Wno-sign-compare",
        "-Wno-unused-parameter",
    ],
    deps = [
        "@sqlite3//:sqlite3",
        "@zlib",
    ],
    visibility = ["//visibility:public"],
